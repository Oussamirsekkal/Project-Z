generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_PRODUCTION")
}

model users {
  id       Int       @id @default(autoincrement())
  name     String?   @db.VarChar(50)
  email    String?   @unique @db.VarChar(50)
  password String?   @db.VarChar(255)
  isAdmin  Boolean   @default(false)
  children children[] // This creates a one-to-many relation between users and children
}

model children {
  id       Int    @id @default(autoincrement())
  name     String @db.VarChar(50)
  age      Int
  userId   Int
  user     users  @relation(fields: [userId], references: [id]) // This sets up the relation field
}
model courses {
  id               Int      @id @default(autoincrement())
  title            String   @db.VarChar(255)
  description      String   @db.VarChar(255)
  difficulty_level String   @db.VarChar(50)
  created_at       DateTime @default(now())
  imageUrl         String?  @db.VarChar(255)
}